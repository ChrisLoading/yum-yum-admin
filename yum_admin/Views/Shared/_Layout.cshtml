<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - yum_admin</title>
    <link rel="stylesheet" href="/css/Layout.css" />
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/yum_admin.styles.css" />
    <style>
        .show {
            display: block;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0; /* remove the gap so it doesn't close */
        }
    </style>
</head>
<body id="page-top">
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="Index">
                <div class="sidebar-brand-text mx-3">yum-yum <sup>Admin</sup>  </div>
            </a>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link " asp-controller="Ingredients" asp-action="index">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>食材管理</span>
                </a>
                <a class="nav-link " asp-controller="User" asp-action="User">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>用戶資料</span>
                </a>
                <a class="nav-link " asp-controller="Recipe" asp-action="Recipe">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>食譜審查</span>
                </a>
                <a class="nav-link " asp-controller="CherishOrders" asp-action="Index">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>惜食管理</span>
                </a>
                <a class="nav-link " asp-controller="Admin" asp-action="Administrator">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>管理員團隊</span>
                </a>

            </li>
        </ul>



        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">


            <!-- Main Content -->
            <div id="content">


                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow pe-3">

                   

                    <div class="dropdown navbar-nav ml-auto">
                        <a class="nav-link  dropdown-toggle me-3" style="" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Douglas McGee</span>
                        </a>
                        <div class="dropdown-menu top-100 " style="right:1rem" aria-labelledby="dropdownMenuButton">
                           
                            <a class="dropdown-item" href="#">登出</a>
                        </div>
                    </div>


                </nav>

                <!-- main site -->
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>


            </div>


        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

        $('#user-show').addClass('noneShow')
        $('#user-down').hover(function mouseToggle() {
                $('#user-show').toggleClass('noneShow');
            })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
